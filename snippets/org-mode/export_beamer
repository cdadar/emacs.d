#+OPTIONS:   H:1 num:t toc:nil author:nil date:nil \n:nil @:t ::t |:t ^:t -:t f:t *:t <:t
#+OPTIONS:   TeX:t LaTeX:t skip:nil d:nil todo:t pri:nil tags:not-in-toc

#+PROPERTY: comments yes
#+PROPERTY: header-args :exports both :eval never-export

#+startup: beamer
#+LaTeX_CLASS: beamer
#+LaTeX_CLASS_options: [aspectratio=169]
#+LaTeX_CLASS_options: [bigger]
#+BIND: org-beamer-frame-default-options "allowframebreaks"


#+LaTeX_HEADER: \usetheme{metropolis}
#+LaTeX_HEADER: \setbeamertemplate{frametitle continuation}{}
#+LaTeX_HEADER: \usepackage{xcolor}
#+LaTeX_HEADER: \hypersetup{colorlinks=true, urlcolor={url-gray}}
#+LaTeX_HEADER: \usepackage{xltxtra,fontspec,xunicode,xeCJK}
#+LaTeX_HEADER: \setCJKmainfont{思源宋体 CN}



#+BEAMER_HEADER: \definecolor{links}{HTML}{0000A0}
#+BEAMER_HEADER: \setbeamertemplate{itemize items}[default]
#+BEAMER_HEADER: \setbeamertemplate{enumerate items}[default]
#+BEAMER_HEADER: \setbeamertemplate{items}[default]
#+BEAMER_HEADER: \addtobeamertemplate{block begin}{}{\vspace*{1\baselineskip}}
#+BEAMER_HEADER: \addtobeamertemplate{block end}{}{}
#+BEAMER_HEADER: \setbeamercolor*{local structure}{fg=darkred}
#+BEAMER_HEADER: \setbeamercolor{section in toc}{fg=darkred}
#+BEAMER_HEADER: \setlength{\parskip}{\smallskipamount}